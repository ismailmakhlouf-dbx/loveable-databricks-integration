# Environment Configuration for {{ project_name }}
# Auto-generated by Lovable Bridge MCP Server
# Copy this to .env and fill in your values

# Databricks Configuration
DATABRICKS_HOST={{ databricks_host }}
DATABRICKS_TOKEN=your_databricks_token_here

# Database Configuration
DATABASE_URL={{ database_url }}
CATALOG_NAME={{ catalog_name }}
SCHEMA_NAME={{ schema_name }}

# Application Configuration
APP_NAME={{ app_name }}
APP_ENV={{ app_env }}
LOG_LEVEL=INFO

{% if llm_endpoints %}
# LLM Configuration (Databricks Foundation Models)
{% for endpoint in llm_endpoints %}
{{ endpoint.env_var }}={{ endpoint.model_name }}
{% endfor %}
{% endif %}

{% if storage_volumes %}
# Storage Configuration
{% for volume in storage_volumes %}
{{ volume.env_var }}={{ volume.path }}
{% endfor %}
{% endif %}

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=*

# Optional: External Services
{% for service in external_services %}
{{ service.name }}_API_KEY=your_{{ service.name|lower }}_key_here
{% endfor %}
